        // Simple beep sound for demonstration (since we can't include real animal sounds in HTML)
        function createBeepSound(frequency, duration) {
            const audioContext = new (window.AudioContext || window.webkitAudioContext)();
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();
            
            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);
            
            oscillator.frequency.value = frequency;
            oscillator.type = 'sine';
            
            gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + duration);
            
            oscillator.start(audioContext.currentTime);
            oscillator.stop(audioContext.currentTime + duration);
        }
        
        // Game variables
        let currentAnimal = 0;
        let score = 0;
        let timeLeft = 10;
        let timer;
        let gameTimer;
        let baseTime = 10;
        
        function startGame() {
            document.getElementById('welcome-screen').style.display = 'none';
            document.getElementById('game-area').style.display = 'block';
            currentAnimal = 0;
            score = 0;
            showNextAnimal();
        }
        
        function showNextAnimal() {
            if (currentAnimal >= animals.length) {
                endGame();
                return;
            }
            
            // Calculate time for this round (gets faster)
            baseTime = Math.max(5, 10 - Math.floor(currentAnimal / 2));
            timeLeft = baseTime;
            
            document.getElementById('score').textContent = score;
            document.getElementById('round').textContent = currentAnimal + 1;
            document.getElementById('animal-image').src = animals[currentAnimal].image;
            document.getElementById('reveal').style.display = 'none';
            document.getElementById('timer').textContent = timeLeft;
            document.getElementById('timer').className = 'timer';
            
            // Start countdown timer
            gameTimer = setInterval(() => {
                timeLeft--;
                document.getElementById('timer').textContent = timeLeft;
                
                if (timeLeft <= 2) {
                    document.getElementById('timer').className = 'timer urgent';
                }
                
                if (timeLeft <= 0) {
                    clearInterval(gameTimer);
                    // Play sound after timer ends
                    playAnimalSound();
                    showReveal();
                }
            }, 1000);
        }
        
        function playAnimalSound() {
            // Create different beep sounds for different animals (demonstration)
            const soundMap = {
                "roar": 150,      // Low growl
                "trumpet": 300,   // Medium trumpet
                "laugh": 400,     // High laugh
                "chatter": 500,   // High chatter
                "grunt": 100,     // Very low grunt
                "neigh": 350,     // Horse-like
                "chirp": 600,     // High chirp
                "bark": 250,      // Dog-like
                "snort": 120,     // Low snort
                "hum": 200        // Low hum
            };
            
            const frequency = soundMap[animals[currentAnimal].sound] || 300;
            createBeepSound(frequency, 1);
        }
        
        function playCorrectSound() {
            playAnimalSound();
        }
        
        function gotIt() {
            if (gameTimer) {
                clearInterval(gameTimer);
                score++;
                playAnimalSound();
                showReveal();
            }
        }
        
        function showReveal() {
            document.getElementById('reveal').style.display = 'block';
            document.getElementById('animal-name').textContent = animals[currentAnimal].name;
            setTimeout(() => {
                currentAnimal++;
                showNextAnimal();
            }, 3000);
        }
        
        function endGame() {
            document.getElementById('game-area').style.display = 'none';
            document.getElementById('final-screen').style.display = 'block';
            document.getElementById('final-score').textContent = score;
            
            let message = '';
            let celebration = '';
            
            if (score >= 8) {
                celebration = 'ðŸŽ‰ðŸ†ðŸŽ‰';
                message = 'Rita, you\'re an animal sound LEGEND!';
            } else if (score >= 5) {
                celebration = 'ðŸŽŠðŸŽˆðŸŽŠ';
                message = 'Great job! You know your safari sounds!';
            } else {
                celebration = 'ðŸŽ‚ðŸŽ‰ðŸŽ‚';
                message = 'What matters is you had fun on your special day!';
            }
            
            document.getElementById('celebration').textContent = celebration;
            document.getElementById('score-message').textContent = message;
        }
        
        function resetGame() {
            currentAnimal = 0;
            score = 0;
            timeLeft = baseTime;
            if (gameTimer) clearInterval(gameTimer);
            document.getElementById('final-screen').style.display = 'none';
            document.getElementById('welcome-screen').style.display = 'block';
        }
    </script>
</body>
